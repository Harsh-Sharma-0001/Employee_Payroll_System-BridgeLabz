<!DOCTYPE html>
<html>

<head>
    <title>Employee Payroll</title>
    <link rel="stylesheet" href="/style.css">

    <!-- Font Awesome 6 CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

    <!-- Topbar -->
    <div class="topbar">
        <div class="brand">
            <i class="fa-solid fa-user-circle"></i>
            <span>EMPLOYEE PAYROLL</span>
        </div>
    </div>

    <div class="main">

        <div class="page-header">
            <h2>Employee Details</h2>

            <div class="header-actions">

                <!-- Search Toggle Icon -->
                <button type="button" class="search-toggle" onclick="toggleSearch()">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>

                <!-- Search Form -->
                <form method="GET" action="/" class="search-form" id="searchForm">
                    <input type="text" name="search" id="searchInput" placeholder="Search employee..."
                        value="<%= search || '' %>">

                    <button type="submit">
                        <i class="fa-solid fa-arrow-right"></i>
                    </button>
                </form>

                <a href="/add" class="add-btn">
                    <i class="fa-solid fa-user-plus"></i> Add User
                </a>

            </div>
        </div>

        <% let employeeList=Array.isArray(employees) ? employees : []; let totalSalary=0; let totalTax=0;
            employeeList.forEach(emp=> {
            totalSalary += emp.basicSalary;
            totalTax += emp.basicSalary * 0.12;
            });

            const totalNet = totalSalary - totalTax;

            // Departments
            let departments = [...new Set(employeeList.map(emp => emp.department))];
            let totalDepartments = departments.length;

            // ✅ Average Salary
            let averageSalary = employeeList.length > 0
            ? totalSalary / employeeList.length
            : 0;
            %>

            <!-- Stats Section -->
            <div class="stats">

                <div class="stat">
                    <i class="fa-solid fa-users"></i>
                    <div>
                        <small>Total Employees</small>
                        <p>
                            <%= employeeList.length %>
                        </p>
                    </div>
                </div>

                <div class="stat">
                    <i class="fa-solid fa-building"></i>
                    <div>
                        <small>Total Departments</small>
                        <p>
                            <%= totalDepartments %>
                        </p>
                    </div>
                </div>

                <div class="stat">
                    <i class="fa-solid fa-indian-rupee-sign"></i>
                    <div>
                        <small>Total Salary</small>
                        <p>₹<%= totalSalary.toFixed(2) %>
                        </p>
                    </div>
                </div>

                <div class="stat">
                    <i class="fa-solid fa-coins"></i>
                    <div>
                        <small>Total Tax (12%)</small>
                        <p>₹<%= totalTax.toFixed(2) %>
                        </p>
                    </div>
                </div>

                <div class="stat">
                    <i class="fa-solid fa-wallet"></i>
                    <div>
                        <small>Net Salary</small>
                        <p>₹<%= totalNet.toFixed(2) %>
                        </p>
                    </div>
                </div>

                <!-- ✅ NEW Average Salary Card -->
                <div class="stat">
                    <i class="fa-solid fa-chart-line"></i>
                    <div>
                        <small>Average Salary</small>
                        <p>₹<%= averageSalary.toFixed(2) %>
                        </p>
                    </div>
                </div>

            </div>

            <!-- Employee Table -->
            <div class="table-wrapper">
                <table>
                    <thead>
                        <tr>
                            <th><i class="fa-solid fa-user"></i> Name</th>
                            <th><i class="fa-solid fa-building"></i> Department</th>
                            <th><i class="fa-solid fa-money-bill-wave"></i> Salary</th>
                            <th><i class="fa-solid fa-percent"></i> Tax</th>
                            <th><i class="fa-solid fa-wallet"></i> Net</th>
                            <th><i class="fa-solid fa-gear"></i> Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% if (employeeList.length===0) { %>
                            <tr>
                                <td colspan="6">No employees found.</td>
                            </tr>
                            <% } else { %>

                                <% employeeList.forEach(employee=> {
                                    const tax = employee.basicSalary * 0.12;
                                    const net = employee.basicSalary - tax;
                                    %>

                                    <tr>

                                        <td>
                                            <div class="name-cell">
                                                <div class="avatar small <%= employee.avatarColor || 'blue' %>">
                                                    <i class="fa-solid fa-user"></i>
                                                </div>
                                                <span>
                                                    <%= employee.name %>
                                                </span>
                                            </div>
                                        </td>

                                        <td>
                                            <%= employee.department %>
                                        </td>

                                        <td>₹<%= employee.basicSalary %>
                                        </td>

                                        <td>₹<%= tax.toFixed(2) %>
                                        </td>

                                        <td>₹<%= net.toFixed(2) %>
                                        </td>

                                        <td>
                                            <a href="/edit/<%= employee.id %>" class="edit">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>

                                            <a href="/delete/<%= employee.id %>"
                                                onclick="return confirm('Delete this employee?')" class="delete">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                        </td>

                                    </tr>

                                    <% }) %>

                                        <% } %>
                    </tbody>
                </table>
            </div>

    </div>

</body>
<script>
    function toggleSearch() {
        const form = document.getElementById("searchForm");
        const input = document.getElementById("searchInput");

        form.classList.toggle("active");

        if (form.classList.contains("active")) {
            input.focus();
        }
    }
</script>


</html>