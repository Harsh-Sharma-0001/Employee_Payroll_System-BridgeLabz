<!DOCTYPE html>
<html>

<head>
    <title>Edit Employee</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>

    <div class="topbar">
        <div class="brand">
            <i class="fa-solid fa-user-circle"></i>
            <span>EMPLOYEE PAYROLL</span>
        </div>
    </div>

    <div class="form-container">

        <h2>Edit Employee</h2>

        <form action="/edit/<%= employee.id %>" method="POST">

            <!-- Hidden Avatar -->
            <input type="hidden" name="avatarColor" id="avatarColor" value="<%= employee.avatarColor || 'blue' %>">

            <!-- Avatar Selection -->
            <div class="avatar-row">

                <% const colors=['blue','green','pink','yellow','purple']; %>

                    <% colors.forEach(color=> { %>
                        <div class="avatar <%= color %> 
                        <%= employee.avatarColor === color ? 'active' : '' %>"
                            onclick="selectAvatar('<%= color %>', this)">
                            <i class="fa-solid fa-user"></i>
                        </div>
                        <% }) %>

            </div>

            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" value="<%= employee.name %>" required>
            </div>

            <div class="form-group">
                <label>Department</label>
                <input type="text" name="department" value="<%= employee.department %>" required>
            </div>

            <div class="form-group">
                <label>Basic Salary</label>
                <input type="number" name="basicSalary" value="<%= employee.basicSalary %>" min="0" required>
            </div>

            <div class="form-actions">
                <button type="submit" class="save-btn">Update</button>
                <a href="/" class="cancel-btn">Back</a>
            </div>

        </form>

    </div>

    <script>
        function selectAvatar(color, element) {

            document.getElementById("avatarColor").value = color;

            document.querySelectorAll(".avatar").forEach(a => {
                a.classList.remove("active");
            });

            element.classList.add("active");
        }
    </script>

</body>

</html>